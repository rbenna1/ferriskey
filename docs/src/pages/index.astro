const bentogrid: BentoGridProps = {
  title: "What we offer",
  description: "Discover all features that we provide",
  items: [
    {
      title: "Manage Clients",
      subtitle: "Centralized client management",
      description:
        "Manage your OAuth clients in one place with powerful tools for creation, monitoring, and permission control. Easily configure redirect URIs, scopes, and security settings.",
      image: "/fk1.png",
    },
    {
      title: "Login with OAuth",
      subtitle: "Seamless authentication",
      description:
        "Implement secure authentication using our OAuth provider. Enable single sign-on capabilities, social login integration, and customizable authorization flows for your applications with minimal configuration.",
      image: "/fk3.png",
    },
    {
      title: "UI Intuitive",
