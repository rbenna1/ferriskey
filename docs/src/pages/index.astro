---
import {
  HomeBentogrid,
  type BentoGridProps,
} from "@/components/elements/home-bentogrid";
import { HomeBlog } from "@/components/elements/home-blog";
import {
  HomeMarquee,
  type MarqueeProps,
} from "@/components/elements/home-marquee";
import { BackgroundAnimation } from "@/components/ui/background-animation";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { BookIcon, RocketIcon } from "lucide-react";
import config from "../../explainer.config";

const posts = await getCollection("blog", (post) => {
  if (import.meta.env.DEV) {
    return true;
  }

  return post.data.publishedAt && new Date(post.data.publishedAt) <= new Date();
});

const header = {
  title: "FerrisKey",
  subtitle: "Open-Source IAM Solution",
  description:
    "Open-source IAM (Identity and Access Management) solution designed for modern cloud-native environments developed in Rust",
  actions: [
    {
      label: "Get started",
      href: config.urls.getStarted,
      icon: RocketIcon,
    },
    {
      label: "Documentation",
      href: config.urls.documentation,
      icon: BookIcon,
    },
  ],
};

